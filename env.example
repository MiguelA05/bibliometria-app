# Bibliometría App - Configuración
# Variables de entorno para la aplicación

# Configuración de la API
API_TITLE="Bibliometría App"
API_DESCRIPTION="API para extracción de metadatos de artículos académicos"
API_VERSION="1.0.0"
API_HOST="0.0.0.0"
API_PORT=8000

# Configuración de OpenAlex
OPENALEX_BASE_URL="https://api.openalex.org"
OPENALEX_USER_AGENT="BibliometriaApp/1.0"
OPENALEX_TIMEOUT=30
OPENALEX_MAX_PER_PAGE=200

# Configuración de límites
MAX_ARTICLES_DEFAULT=10
MAX_ARTICLES_LIMIT=1000
RATE_LIMIT_PER_MINUTE=60

# Configuración de archivos
RESULTS_DIR="results"
CSV_ENCODING="utf-8-sig"

# Configuración de logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Configuración de caché (opcional)
CACHE_ENABLED=false
CACHE_TTL=3600
REDIS_URL="redis://localhost:6379"

# Configuración de desarrollo
DEBUG=false
RELOAD=false





